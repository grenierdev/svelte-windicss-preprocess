{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"moduleResolution": "node",
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"lib": [
			"ESNext",
			"DOM",
			"ES2015"
		],
		"strict": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"declaration": true
	},
	"include": [
		"./src",
		"./tests",
		"./types"
	]
}